<%- model_class = PowerOrder -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:group_name) %>:</strong></dt>
  <dd><%= @power_order.group.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item) %>:</strong></dt>
  <dd><%= @power_order.item %></dd>
  <dt><strong><%= model_class.human_attribute_name(:power) %>:</strong></dt>
  <dd><%= @power_order.power %></dd>
  <dt><strong><%= model_class.human_attribute_name(:manufacturer) %>:</strong></dt>
  <dd><%= @power_order.manufacturer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:model) %>:</strong></dt>
  <dd><%= @power_order.model %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              power_orders_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_power_order_path(@power_order), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              power_order_path(@power_order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
