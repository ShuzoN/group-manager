<%- model_class = GroupProjectName -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:group) %>:</strong></dt>
  <dd><%= @group_project_name.group.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_name) %>:</strong></dt>
  <dd><%= @group_project_name.project_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              group_project_names_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_group_project_name_path(@group_project_name), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              group_project_name_path(@group_project_name),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
